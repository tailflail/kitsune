<%= form_with model: [@post, @comment] do |form| %>
  <%= render "devise/shared/error_messages", resource: @comment %>
  <div class="mt-12">
    <div><%= form.label :body, class: "text-xl hidden" %></div>
    <div><%= form.text_area :body, class: "devise-form-field lg:w-[600px] lg:h-[100px] lg:max-h-[200px] min-h-[100px] min-w-[300px]" %></div>
  </div>

  <div class="mt-12">
    <%= form.submit class: "border rounded border-green-100 px-6 py-2 text-green-100 hover:bg-green-100 hover:text-green-900 cursor-pointer" %>
  </div>
<% end %>