<div class="flex justify-center text-center relative">
  <div class="devise-form">
    <div>Forgot your password?</div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-6">
        <div><%= f.label :email %></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-form-field" %>
      </div>

      <div class="actions mt-6">
        <%= f.submit "Send me reset password instructions", class: "cursor-pointer hover:text-yellow-200" %>
      </div>
    <% end %>
  </div>
</div>

class="flex flex-col items-center"