<div class="flex justify-center text-center relative">
  <div class="devise-form">
    <h1 class="text-2xl font-bold text-neutral-100">Sign up</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mt-12">
        <div><%= f.label :username %></div>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "devise-form-field" %>
      </div>

      <div class="field mt-6">
        <div><%= f.label :email %></div>
        <%= f.email_field :email, autocomplete: "email", placeholder: "mail@example.com", class: "devise-form-field placeholder:text-neutral-400" %>
      </div>

      <div class="field mt-6">
        <div>
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em class="text-xs">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "devise-form-field" %>
      </div>

      <div class="field mt-6">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-form-field" %>
      </div>

      <div class="actions mt-12">
        <%= f.submit "Sign up", class: "border rounded border-yellow-100 px-6 py-2 text-yellow-100 hover:bg-yellow-100 hover:text-yellow-900 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
