<%= form_with model: @post do |form| %>
  <%= render "devise/shared/error_messages", resource: @post %>
  <div class="mt-12">
    <div><%= form.label :title, class: "text-xl" %></div>
    <div><%= form.text_field :title, class: "devise-form-field lg:w-[600px]" %></div>
  </div>

  <div class="mt-4">
    <div><%= form.label :description, class: "text-xl" %></div>
    <div><%= form.text_area :description, class: "devise-form-field lg:w-[600px] lg:h-[200px] lg:max-h-[500px] lg:min-h-[200px]" %></div>
  </div>

  <div class="mt-4">
    <div><%= form.label :tag_list, "Tags", class: "text-xl" %></div>
    <div><%= form.text_area :tag_list, class: "devise-form-field lg:w-[600px] lg:h-[100px] lg:max-h-[300px] lg:min-h-[100px]" %></div>
  </div>

  <% if @post.id.nil? %>
    <div class="mt-12">
      <label class="flex justify-center items-center h-32 px-4 border-2 border-neutral-500 border-dashed rounded-md appearance-none cursor-pointer hover:border-neutral-600">
        <%= form.file_field :image, class: "file:mr-4 file:py-1 file:px-2 file:rounded-lg file:border-0 file:text-sm file:bg-neutral-200 file:text-neutral-900 hover:file:bg-neutral-300" %>
      </label>
    </div>
  <% end %>

  <div class="mt-12">
    <%= form.submit class: "border rounded border-green-100 px-6 py-2 text-green-100 hover:bg-green-100 hover:text-green-900 cursor-pointer" %>
  </div>
<% end %>