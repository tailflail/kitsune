<div class="flex lg:flex-col items-center bg-neutral-800 lg:w-[400px] p-2 lg:p-6 border-neutral-700 rounded-lg">
  <div class="flex flex-wrap gap-3 items-center">
    <% if current_user == @post.user %>
      <div>
        <%= link_to "Edit Post", edit_post_path(@post),
                    class: "inline-block border rounded border-yellow-100 px-3 py-2 text-yellow-100 hover:bg-yellow-100 hover:text-yellow-900" %>
      </div>
      <div>
        <%= button_to "Delete Post", post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" },
                      class: "inline-block px-3 py-3 leading-none rounded text-red-600 hover:text-neutral-100 border-2 border-red-700 hover:bg-red-900" %>
      </div>
    <% end %>

    <div>
      <%= link_to "Download", rails_blob_url(@post.image),
                  class: "inline-block px-3 py-3 leading-none border-none rounded text-neutral-200 bg-neutral-600 hover:bg-neutral-700" %>
    </div>
  </div>

  <div class="flex flex-col gap-3 items-center text-neutral-200 mt-[50px]">
    <div class="text-2xl">Tags</div>
    <div class="flex flex-wrap gap-2">
      <% if @post.tags.empty? %>
        <div class="italic">No tags available.</div>
      <% else %>
        <% @post.tags.each do |tag| %>
          <div class="px-2 py-1 border border-neutral-500 rounded-lg">
            <%= tag %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>