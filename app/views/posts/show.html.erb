<div class="flex flex-wrap flex-col lg:flex-row justify-center text-neutral-100 gap-10 m-[10px] lg:m-[20px]">

  <div class="flex flex-col items-center lg:min-w-[1200px]">
    <div class="mb-[40px] lg:rounded-lg lg:border-2 lg:border-neutral-800 lg:px-[150px] lg:py-[50px]">
      <%= image_tag @post.image, class: "max-w-[100%] max-h-[100%]" %>
    </div>

    <div class="border-2 border-neutral-700 rounded-lg lg:w-[1200px]">
      <div class="flex items-center rounded-lg p-4">
        <a href="<%= user_path(@post.user) %>" class="mr-4">
          <%= image_tag @post.user.avatar, class: "w-[75px] h-[75px], min-w-[50px] rounded-lg mx-auto block" %>
        </a>

        <div class="flex flex-col">
          <div class="font-bold text-2xl">
            <%= @post.title %>
          </div>
          <div>
            By <a href="" class="font-bold"><%= @post.user.username %></a>
          </div>
        </div>
      </div>

      <div class="p-4 bg-neutral-700">
        <div class="font-bold text-xl">
          Description
        </div>
        <div class="mt-4">
          <% if @post.description.empty? %>
            <em class="text-sm">No description available.</em>
          <% else %>
            <%= @post.description %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex lg:flex-col items-center bg-neutral-800 lg:w-[400px] p-2 lg:p-6 border-neutral-700 rounded-lg">

    <div class="flex flex-wrap gap-3 items-center">
      <% if current_user == @post.user %>
        <div>
          <%= link_to "Edit post", edit_post_path(@post),
                      class: "inline-block border rounded border-green-100 px-4 py-2 text-green-100 hover:bg-green-100 hover:text-green-900" %>
        </div>
        <div>
          <%= button_to "Delete post", post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this post?" },
                      class: "inline-block px-4 py-3 leading-none rounded text-neutral-100 bg-red-800 hover:bg-red-900" %>
        </div>
      <% end %>

      <div>
        <%= link_to "Download", rails_blob_url(@post.image),
                    class: "inline-block px-4 py-3 leading-none border-none rounded text-neutral-200 bg-neutral-600 hover:bg-neutral-700" %>
      </div>
    </div>

  </div>

</div>