<%= form_with model: profile do |form| %>
  <%= render "devise/shared/error_messages", resource: profile %>
  <div class="mt-12">
    <div><%= form.label :short_biography, class: "text-xl" %></div>
    <div><%= form.text_area :short_biography, class: "devise-form-field lg:w-[600px] lg:h-[150px] lg:max-h-[200px] lg:min-h-[100px]" %></div>
  </div>

  <div class="mt-4">
    <div><%= form.label :long_biography, class: "text-xl" %></div>
    <div><%= form.text_area :long_biography, class: "devise-form-field lg:w-[600px] lg:h-[200px] lg:max-h-[500px] lg:min-h-[200px]" %></div>
  </div>

  <div class="mt-12">
    <%= form.submit class: "border rounded border-green-100 px-6 py-2 text-green-100 hover:bg-green-100 hover:text-green-900 cursor-pointer" %>
  </div>
<% end %>