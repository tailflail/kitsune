<div>
  <div>
    <nav class="flex lg:fixed w-[100%] max-w-[2560px] items-center bg-black bg-opacity-80 justify-between flex-wrap px-4 py-4 lg:py-0 lg:h-[60px]">
      <div class="flex items-center flex-shrink-0 text-white mr-6">
        <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
        <span class="font-semibold text-xl tracking-tight">Kitsune</span>
      </div>
      <div class="block lg:hidden">
        <button class="flex items-center px-3 py-2 border rounded text-neutral-200 border-neutral-400 hover:text-white hover:border-white">
          <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
        </button>
      </div>
      <div class="w-full block flex-grow flex items-center lg:w-auto">
        <div class="text-m lg:flex-grow">
          <%= link_to "Home", home_path, class: "block mt-4 lg:inline-block lg:mt-0 text-neutral-200 hover:text-white mr-4" %>
        </div>
        <div class="flex items-center block">
          <div>
            <%= link_to "Create", new_post_path,
                        class: "inline-block text-sm px-4 py-2 leading-none border rounded text-green-200 border-green-100 hover:text-neutral-900 hover:bg-green-200 mr-8" %>
          </div>

          <% if user_signed_in? %>
            <a href="<%= user_path(current_user) %>">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, class: "w-[50px] h-[50px] min-w-[50px] rounded-lg mx-auto block mr-4" %>
              <% else %>
                <%= image_tag current_user.gravatar_url, class: "w-[50px] h-[50px] min-w-[50px] rounded-lg mx-auto block mr-4" %>
              <% end %>
            </a>

            <div class="text-neutral-200 inline-block hover:text-neutral-100 mr-4">
              <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
            </div>
            <div class="text-neutral-200 inline-block hover:text-neutral-100">
              <%= link_to "Account settings", edit_user_registration_path %>
            </div>

          <% else %>
            <div class=" text-neutral-200 inline-block hover:text-neutral-100 mr-4">
              <%= link_to "Sign in", new_user_session_path %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
  <% unless params[:action] == "show" && params[:controller] == "posts" %>
    <%= image_tag("fox-banner.jpg", class: "object-cover h-[125px] lg:h-[300px]") %>
  <% end %>
</div>