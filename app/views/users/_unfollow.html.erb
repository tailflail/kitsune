<%= form_for current_user.active_relationships.find_by(followed_id: user.id),
             method: :delete, data: { turbo_confirm: "Are you sure you want to unfollow?" } do |form| %>
  <%= form.submit "Unfollow", class: "cursor-pointer px-2 py-2 border-2 rounded-lg border-red-800 text-red-800 hover:bg-red-900 hover:text-neutral-200" %>
<% end %>